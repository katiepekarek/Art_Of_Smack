
<body class="marquee-viewport" style="height: 362px; background: url(https://bikyni.com/system/spree/marquees/image_1s/000/000/005/original/home_page_hero_B_W_1920.jpg?1433777374) 0% 50% / cover no-repeat;">

<div class="highlight-bar" style="width: 100%;"></div>
    <%= form_tag signin_path do %>
      <div class= 'row'>
        <div class= 'col-sm-6 col-md-offset-3'>
          <div class= 'well'>
            <div class= 'page-header'>
              <h3>Sign in with Bleacher Report</h3>
            </div>

            <% if @sign_in_error %>
              <p class= "text-danger"> <%= @sign_in_error %> </p>
            <% end %>

            <div class= 'form-group'>
              <%= label_tag :email, 'Email', class: 'control-label' %>
              <%= email_field_tag :email, '', class: 'form-control' %>
            </div>

            <div class= 'form-group'>
              <%= label_tag :password, 'Password', class: 'control-label' %>
              <%= password_field_tag :password, '', class: 'form-control' %>
            </div>

            <div>
              <%= submit_tag "Sign in", class: 'btn btn-default' %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
